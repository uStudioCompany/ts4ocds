{
  "compilerOptions": {
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "standard/*": ["./standard/*"],
      "standard": ["./standard"],
      "metrics/*": ["./extensions/metrics/*"],
      "metrics": ["./extensions/metrics"],
      "requirements/*": ["./extensions/requirements/*"],
      "requirements": ["./extensions/requirements"],
      "options/*": ["./extensions/options/*"],
      "options": ["./extensions/options"],
      "lots/*": ["./extensions/lots/*"],
      "lots": ["./extensions/lots"],
      "conversions/*": ["./extensions/conversions/*"],
      "conversions": ["./extensions/conversion*"]
    },
    "forceConsistentCasingInFileNames": true,
    "keyofStringsOnly": true,
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "exclude": [
    "node_modules"
  ]
}
